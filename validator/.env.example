# WAVES Configuration
WAVES_NODE_URL=https://nodes-testnet.wavesnodes.com
WAVES_CHAIN_ID=T

# Unit0 Configuration
UNIT0_RPC_URL=https://rpc-testnet.unit0.dev
UNIT0_CHAIN_ID=88818

# Bridge Contract Addresses
WAVES_BRIDGE_ADDRESS=3N...your_waves_bridge_address
UNIT0_BRIDGE_ADDRESS=0x...your_unit0_bridge_address

# Validator Credentials
# WARNING: Keep this secret! Never commit to version control
VALIDATOR_PRIVATE_KEY=0x...your_private_key
VALIDATOR_ADDRESS=0x...your_validator_address

# P2P Configuration
P2P_PORT=9000
# Comma-separated list of bootstrap peer multiaddresses
P2P_BOOTSTRAP_PEERS=/ip4/1.2.3.4/tcp/9000/p2p/QmPeerId1,/ip4/5.6.7.8/tcp/9000/p2p/QmPeerId2

# Confirmation Requirements
WAVES_CONFIRMATIONS=10
UNIT0_CONFIRMATIONS=32

# Database
DB_PATH=./data/validator.db

# API Configuration
API_PORT=8080
API_ENABLED=true

# Logging (debug, info, warn, error)
LOG_LEVEL=info
